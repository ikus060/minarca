<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>unix</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- Include 128px icons -->
        <fileSet>
            <directory>target/generated-resources/icons/com/patrikdufresne/minarca/ui</directory>
            <includes>
                <include>*128*</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <!-- Include SWT jars -->
        <fileSet>
            <directory>target/generate-resources</directory>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <!-- Include README and LICENSE file -->
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
            </includes>
            <outputDirectory>.</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <!-- Include executable script -->
        <fileSet>
            <directory>src/main/root/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <!-- Include dependencies -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>