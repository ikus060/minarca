<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSZZZ}][%-5level][%thread][%logger{36}] %msg%n</Pattern>
    </layout>
  </appender>

  <logger name="com.patrikdufresne.minarca">
    <level value="debug"/>
  </logger>
  
  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>