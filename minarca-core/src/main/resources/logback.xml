<configuration>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.folder}/minarca.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>minarca.%i.log</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>3</maxIndex>
    </rollingPolicy>

    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>5MB</maxFileSize>
    </triggeringPolicy>
    <encoder>
      <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSS}][%X{process_id}][%-5level][%thread][%logger{36}] %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.patrikdufresne">
    <level value="${log.minarca.level:-DEBUG}"/>
  </logger>
  
  <root level="${log.root.level:-WARN}">
    <appender-ref ref="FILE" />
  </root>

</configuration>